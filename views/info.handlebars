<script src="https://code.jquery.com/jquery.js"></script>
<script src="/js/jquery.widget.min.js"></script>
<script src="/js/bootstrap.min.js"></script>   
<script src="js/metro.min.js"></script>
<script src="/js/knockout.js"></script>
<script src="/js/socket.io/dist/socket.io.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="/js/gradeChart.js"></script>
<script src="/js/Models/InfoModel.js"></script>
<script src="/js/ViewModels/InfoViewModel.js"></script>

<style>
.page-header {
  margin : 20px 0 20px;
}
#container{

}
</style>
</head>
<script>
$(document).ready(function(){
  var ViewModel = new InfoViewModel(InfoModel, document.getElementById("container"));
  ViewModel.initialize();
});
</script>
<body class="container metro" id="container">
  <div class="page-header row ">
  <nav class="navigation-bar light">
    <nav class="navigation-bar-content">
        <item class="element"><a href="/">Web Reg <sup>2.0 </sup></a></item>
        <item class="element-divider"></item>
    </nav>
</nav>
  </div>
    <ol class="breadcrumb">
      <li data-bind="text : _class().group"></li>
      <li class="active" data-bind="text : _class().name"></li>
    </ol>

    <h3>Presented by <span data-bind="text : _class().instructor"></span></h3>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#info" data-toggle="tab">Class Info</a></li>

  <li><a href="#feed" data-toggle="tab">Live Feed</a></li>
</ul>

  <div class="tab-content">
  <div class="tab-pane" id ="cape">CAPES</div>
  <div class="tab-pane" id="enrollment">ENROLLMENT</div>


  <div class="tab-pane active" id="info">
    <span class="label label-primary">Lecture Times</span>
    <table class="table">
      <thead><tr>
        <td>Day</td> <td>Hour</td>
      </tr></thead>

      <tbody>
        <tr><td>Monday</td><td>5:00 - 5:50</td></tr>
        <tr><td>Wednesday</td><td>5:00 - 5:50</td></tr>
        <tr><td>Friday</td><td>5:00 - 5:00</td></tr>
      </tbody>
    </table>
    <span class="label label-primary">Discussion Times</span>
    <table class="table">
      <thead><tr>
        <td>Day</td> <td>Hour</td>
      </tr></thead>
      <tbody>
        <tr><td>Tuesday</td><td>9:00 - 9:50</td></tr>
        <tr><td>Thursday</td><td>3:00 - 4:50</td></tr>
      </tbody>
    </table>
    <span class="label label-primary">Prerequisites</span>
      <ul class="list-group">
         <li class="list-group-item">CSE 100</li>
         <li class="list-group-item">CSE 105</li>
    </ul>
   </div>

  <div class="tab-pane" id="feed">
    <div class="row">
      <div class="col-md-6">
        <div data-bind="gradechart : ''"></div>
      </div>
      <div class="col-md-6">
        <h2>Messages</h2>
            <!-- ko if : messages().length == 0 -->
            <li class="list-group-item">No messages posted.</li>
            <!-- /ko -->
            <!-- ko foreach : messages-->
            <li class="list-group-item" data-bind="text : $data"></li>
            <!-- /ko-->
            <textarea type="text" data-bind="value : currentMessage" class="form-control" placeholder="Place message here"></textarea><br>
          <button data-bind="submitMessage : currentMessage"class="button success">Submit</button>
      </div>
    </div>
  </div>

 </div>

</body>



</html>
  